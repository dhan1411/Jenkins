pipeline {

       agent any 

       environment {

       AWS_CREDENTIALS = credentials("AWS_credentials_id")

       }

       stages{

       stage("Checkout"){

       steps{
             
	     git_url : https://github.com/dhan1411/jenkins.git , branch : main

       }

       }

       stage("Terraform") {

       steps {

        sh """ terraform init
	       terraform refresh
	       terraform plan
	       terraform apply --auto-approve """

	       }
	       }
	       }
	       }
